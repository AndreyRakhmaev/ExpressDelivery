@model ExpressDelivery.Models.ServicesAndPlansViewModel

@{
    ViewBag.Title = "Тарифы и услуги";
}

@*@section Styles {
    @Styles.Render("")
}*@

<div class="row mar-b-60">
    <div class="col-lg-12">
        <!--tab start-->
        <section class="tab wow fadeInLeft">
            <header class="panel-heading tab-bg-dark-navy-blue">
                <ul class="nav nav-tabs nav-justified">
                    <li class="active">
                        <a data-toggle="tab" href="#plans">Тарифы</a>
                    </li>
                    <li>
                        <a data-toggle="tab" href="#services">Услуги</a>
                    </li>
                    <li>
                        <a data-toggle="tab" href="#shares">Акции</a>
                    </li>
                </ul>
            </header>
            <div class="panel-body">
                <div class="tab-content tasi-tab">
                    <div id="plans" class="tab-pane fade in active">
                        <h2>Тарифы</h2>
                        <div class="wrap">
                            @foreach (var plan in Model.Plans)
                            {
                            <div class="box">
                                <div class="top">
                                    <p class="title">«@plan.наименованиеТарифа»</p>
                                    <hr />
                                    <br />
                                    <p class="price">
                                        @plan.стоимостьТарифа
                                        <span>₽/км.</span>
                                    </p>
                                    <br />
                                    <a class="button" href="#">Перейти на тариф</a>
                                </div>
                                <div class="bottom">
                                    <ul>
                                        <li>Срок отправки до @plan.длительностьОжидания дн.</li>
                                    </ul>
                                    <p>@plan.описаниеТарифа</p>
                                </div>
                            </div>
                            }
                        </div>
                    </div>
                    <div id="services" class="tab-pane fade">
                        <h2>Услуги</h2>
                        <div class="wrap">
                            @foreach (var service in Model.Services)
                            {
                                <div class="box">
                                    <div class="top">
                                        <p class="title">«@service.наименованиеУслуги»</p>
                                        <hr />
                                        <br />
                                        <p class="price">
                                            @service.стоимостьУслуги
                                            <span>₽</span>
                                        </p>
                                        <br />
                                        <a class="button" href="#">Добавить услугу</a>
                                    </div>
                                    <div class="bottom">
                                        <p>@service.описаниеУслуги</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div id="shares" class="tab-pane fade">
                        <h2>Акции и бонусы</h2>
                        <div class="wrap">
                            @foreach (var shares in Model.Shares)
                            {
                                <div class="box">
                                    <div class="top">
                                        <p class="title">«@shares.наименованиеАкции»</p>
                                        <hr />
                                        <br />
                                        <p class="price">
                                            - @shares.скидка
                                            <span>%</span>
                                        </p>
                                        <br />
                                        <a class="button" href="#">Активировать</a>
                                    </div>
                                    <div class="bottom">
                                        <ul>
                                            <li>@shares.датаНачала - @shares.датаОкончания</li>
                                        </ul>
                                        <p>@shares.описаниеАкции</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--tab end-->
    </div>
</div>
